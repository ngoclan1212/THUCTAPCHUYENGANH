<!-- Custom CSS -->
<style>
    /* === Navbar & Brand === */
    .navbar {
        font-family: "Poppins", sans-serif;
        font-weight: 500;
    }
    .navbar-brand i {
        color: #5ca0d3;
    }

    /* === Auth Buttons (Login & Sign Up) === */
    .btn-auth {
        background-color: #5ca0d3;
        color: #fff;
        border: 2px solid #5ca0d3;
        border-radius: 8px;
        padding: 6px 16px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 3px 10px rgba(92,160,211,0.25);
    }

    /* Hover: sáng nhẹ và nổi lên */
    .btn-auth:hover {
        background-color: #4c90c8;
        border-color: #4c90c8;
        transform: translateY(-2px);
        box-shadow: 0 0 15px rgba(92,160,211,0.5);
    }

    /* Click: cảm giác nhấn */
    .btn-auth:active {
        transform: scale(0.97);
        box-shadow: 0 2px 6px rgba(92,160,211,0.4);
    }

    /* === Responsive tweaks === */
    @media (max-width: 991px) {
        .btn-auth {
            margin-top: 8px;
            display: inline-block;
        }
    }
</style>
