<main class="forget-page d-flex flex-column align-items-center justify-content-center"
      style="min-height: 80vh; background-color: #b3d9ff;">
    <div class="card shadow-sm border-0" style="max-width: 400px; width: 100%; border-radius: 12px;">
        <div class="card-body p-4 text-center">
            <h3 class="fw-bold mb-3" style="color:#1a75cf;">Forget Password</h3>
            <p class="text-muted small mb-4">Enter email to reset password!</p>

            <form>
                <div class="mb-3 text-start">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter your email">
                </div>

                <button type="submit" class="btn w-100 mb-3"
                        style="background-color:#1a75cf; border:none; color:white; font-weight:600;">
                    Send request
                </button>
            </form>

            <a href="/login" class="small" style="color:#1a75cf;">Login</a>
        </div>
    </div>
</main>

