        /* Navbar */
        .navbar {
            background:#5ca0d3;
            padding:1rem 2rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            position: sticky;
            top: 0;
            z-index: 1000;
        }
        .navbar-brand {
            color:#fff;
            font-weight:700;
            font-size:1.5rem;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }
        .navbar-brand:hover { transform: scale(1.05); }
        .nav-link {
            color:#fff;
            margin-left:1rem;
            font-weight:500;
            transition: all 0.3s ease;
        }
        .nav-link:hover {
            color:#eaf4f2;
