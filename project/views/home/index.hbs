<script>
    window.addEventListener('load', () => {
        document.getElementById('mainBanner').classList.add('loaded');
    });

    // Scroll effects
    const fadeElements = document.querySelectorAll('.card-product');
    const newsletter = document.getElementById('newsletter');

    function handleScroll() {
        fadeElements.forEach(el => {
            const rect = el.getBoundingClientRect();
            if(rect.top < window.innerHeight - 50) el.classList.add('visible');
        });

        if(newsletter.getBoundingClientRect().top < window.innerHeight - 50)
            newsletter.classList.add('visible');
    }

    window.addEventListener('scroll', handleScroll);
    window.addEventListener('load', handleScroll);

    // --- CART BUTTON FIX ---
    const cartIcon = document.getElementById('cart-fly');
    const message = document.getElementById("cart-message");
    const addToCartButtons = document.querySelectorAll(".btn-add-cart");

    addToCartButtons.forEach(btn => {
        btn.addEventListener("click", () => {

            // Hiện thông báo
            message.style.display = "block";
            message.style.opacity = "1";

            const product = {
                name: btn.dataset.name,
                price: Number(btn.dataset.price),
                img: btn.dataset.img,
                qty: 1
            };

            let cart = JSON.parse(localStorage.getItem('cart')) || [];

            const existing = cart.find(item =>
                    item.name === product.name && item.img === product.img
            );

            if (existing) {
                existing.qty += 1;
            } else {
                cart.push(product);
            }

            localStorage.setItem('cart', JSON.stringify(cart));

            // ⭐ Thêm dòng này để chuyển sang giỏ hàng ngay
            window.location.href = "/giohang";

            // 2 giây sau tự ẩn
            setTimeout(() => {
                message.style.opacity = "0";
                setTimeout(() => message.style.display = "none", 300);
            }, 400);
        });
    });

    addButtons.forEach(btn => {
        btn.addEventListener('click', () => {

            // Hiện thông báo
            cartMessage.classList.add("show");
            setTimeout(() => {
                cartMessage.classList.remove("show");
            }, 2000);

            // Hiệu ứng icon bay vào giỏ
            const flyIcon = document.createElement('div');
            flyIcon.style.width = '30px';
            flyIcon.style.height = '30px';
            flyIcon.style.background = "url('img/cart-icon.png') no-repeat center/contain";
            flyIcon.style.position = 'absolute';

            const rect = btn.getBoundingClientRect();
            flyIcon.style.top = rect.top + 'px';
            flyIcon.style.left = rect.left + 'px';
            flyIcon.style.zIndex = 1000;

            document.body.appendChild(flyIcon);

            const endX = cartIcon.getBoundingClientRect().left;
            const endY = cartIcon.getBoundingClientRect().top;

            flyIcon.animate([
                { transform: `translate(0, 0) scale(1)` },
                { transform: `translate(${endX - rect.left}px, ${endY - rect.top}px) scale(0.5)` }
            ], {
                duration: 800,
                easing: 'ease-in-out'
            });

            setTimeout(() => flyIcon.remove(), 800);
        });
    });
</script>

