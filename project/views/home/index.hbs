            cursor: pointer;
        }
        @keyframes floatCart {
            0%,100% { transform: translateY(0); }
            50% { transform: translateY(-8px); }
        }

        /* Banner */
        #mainBanner {
            display:flex;
            flex-wrap:wrap;
            height:500px;
            overflow:hidden;
            margin-bottom:60px;
            background: linear-gradient(90deg,#f8fcff,#eaf4f9);
        }
        #mainBanner .banner-text {
            flex:1;
            padding:50px;
            display:flex;
            flex-direction:column;
            justify-content:center;
            opacity:0;
            transform: translateX(-60px);
            transition: all 1s ease-out;
        }
        #mainBanner.loaded .banner-text {
            opacity:1;
            transform: translateX(0);
        }
