<style>
    /* Container sản phẩm */
    .row-products {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding-bottom: 50px; /* Kéo dài trang */
    }

    /* Card sản phẩm */
    .product-card {
        width: 180px; /* Card nhỏ hơn để ảnh nhỏ */
        background: #fdfdf7;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
        text-align: center;
    }

    .product-card:hover {
        transform: translateY(-5px) scale(1.03);
        box-shadow: 0 8px 20px rgba(0,0,0,0.2);
    }

    /* Hình ảnh nhỏ hơn */
    .product-card img {
        width: 100%;
        height: 150px; /* ảnh nhỏ */
        object-fit: cover;
        transition: transform 0.3s;
    }

    .product-card:hover img {
        transform: scale(1.05);
    }

    /* Nút thêm vào giỏ */
    .btn-add-to-cart {
        background-color: #5ca0d3;
        color: white;
        border: none;
        border-radius: 8px;
        margin: 8px 0;
        padding: 6px 14px; /* nhỏ hơn để phù hợp với card */
        font-weight: 600;
        transition: transform 0.2s, background-color 0.3s;
    }

    .btn-add-to-cart:hover {
        background-color: #468bb0;
        transform: translateY(-2px);
    }

    .btn-add-to-cart:active {
        transform: translateY(1px);
    }

    /* Thông báo giỏ hàng */
    #cart-message {
        position: fixed;
        top: 20px;
        right: 20px;
        background: #5ca0d3;
        color: #fff;
        padding: 12px 24px;
        border-radius: 8px;
        display: none;
        z-index: 9999;
        font-weight: bold;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }

    /* Section thêm vào shop để trang dài ra */
    .shop-intro {
        background-color: #f7f9fa;
        text-align: center;
        padding: 40px 20px;
        font-family: 'Poppins', sans-serif;
        color: #2f514b;
        border-radius: 20px;
        margin: 40px auto;
        width: 90%;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

    /* Footer */
    footer {
        background: linear-gradient(90deg, #5ca0d3, #a3d8f0);
        color: white;
        text-align: center;
        padding: 40px 0;
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        margin-top: 50px;
    }

    /* Responsive */
    @media(max-width: 575px) { .product-card { width: 90%; } }
    @media(min-width: 576px) and (max-width: 767px) { .product-card { width: 40%; } }
    @media(min-width: 768px) and (max-width: 991px) { .product-card { width: 28%; } }
    @media(min-width: 992px) { .product-card { width: 18%; } }
</style>

