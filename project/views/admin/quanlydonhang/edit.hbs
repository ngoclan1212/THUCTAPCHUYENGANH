<div class="card-body">
    <h4>Thông tin khách hàng</h4>
    <p><strong>Tên:</strong> {{order.user.name}}</p>
    <p><strong>SĐT:</strong> {{order.user.phone}}</p>
    <p><strong>Địa chỉ:</strong> {{order.user.address}}</p>
    <p><strong>Email:</strong> {{order.user.email}}</p>
    <hr>
    <form action="/admin/quanlydonhang/edit/{{order._id}}" method="POST">
        <label>Thay đổi trạng thái:</label>
        <select name="status" class="form-control mb-3">
            <option value="pending" {{#if (eq order.status "pending")}}selected{{/if}}>Pending</option>
            <option value="completed" {{#if (eq order.status "completed")}}selected{{/if}}>Completed</option>
            <option value="cancelled" {{#if (eq order.status "cancelled")}}selected{{/if}}>Cancelled</option>
        </select>
        <button class="btn btn-primary">Cập nhật đơn hàng</button>
    </form>
</div>