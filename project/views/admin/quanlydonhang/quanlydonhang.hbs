<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <a href="/admin">Dashboard</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/admin/quanlydonhang">Quản lý đơn hàng</a>
    </li>
</ol>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="font-weight-bold">Quản Lý Đơn Hàng</h2>
    </div>

    <div class="mb-4">
        <a href="/admin/quanlydonhang" class="btn btn-primary">Tất cả</a>
        <a href="/admin/quanlydonhang?status=pending" class="btn btn-light shadow-sm">Đang chờ</a>
        <a href="/admin/quanlydonhang?status=completed" class="btn btn-light shadow-sm">Hoàn thành</a>
        <a href="/admin/quanlydonhang?status=cancelled" class="btn btn-light shadow-sm">Hủy</a>
    </div>

    <div class="card shadow border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>EMAIL / KHÁCH HÀNG</th>
                    <th>TỔNG TIỀN</th>
                    <th>TRẠNG THÁI</th>
                    <th>NGÀY ĐẶT</th>
                    <th>THAO TÁC</th>
                </tr>
                </thead>
                <tbody>
                {{#each orders}}
                    <tr>
                        <td>#{{sliceId this._id}}</td>
                        <td>
                            <div class="font-weight-bold">{{this.user.email}}</div>
                            <small class="text-muted">{{this.user.name}}</small>
                        </td>
                        <td class="font-weight-bold text-danger">{{formatCurrency this.total}}₫</td>
                        <td>
                            {{#if (eq this.status "pending")}}
                                <span class="badge bg-warning text-dark text-uppercase p-2">Pending</span>
                            {{/if}}
                            {{#if (eq this.status "completed")}}
                                <span class="badge bg-success text-white text-uppercase p-2">Completed</span>
                            {{/if}}
                            {{#if (eq this.status "cancelled")}}
                                <span class="badge bg-danger text-white text-uppercase p-2">Cancelled</span>
                            {{/if}}
                        </td>
                        <td>{{formatDate this.createdAt}}</td>
                        <td>
                            <div class="d-flex align-items-center">
                                {{#if (eq this.status "pending")}}
                                    <form action="/admin/quanlydonhang/edit/{{this._id}}" method="POST" class="me-2"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn hoàn thành đơn hàng này?')">
                                        <input type="hidden" name="status" value="completed">
                                        <button class="btn btn-success btn-sm shadow-sm" title="Hoàn thành">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>

                                    <form action="/admin/quanlydonhang/edit/{{this._id}}" method="POST" class="me-2"
                                          onsubmit="return confirm('Cảnh báo: Bạn chắc chắn muốn HỦY đơn hàng này?')">
                                        <input type="hidden" name="status" value="cancelled">
                                        <button class="btn btn-danger btn-sm shadow-sm" title="Hủy đơn">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                {{/if}}

                                <a href="/admin/quanlydonhang/edit/{{this._id}}" class="btn btn-info btn-sm text-white me-2" title="Chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <form action="/admin/quanlydonhang/delete/{{this._id}}" method="POST"
                                      onsubmit="return confirm('Hành động này không thể hoàn tác. Xóa đơn hàng này?')">
                                    <button class="btn btn-outline-danger btn-sm" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>