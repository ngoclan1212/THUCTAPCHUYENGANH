<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="font-weight-bold">Quản Lý Đơn Hàng</h2>
    </div>

    <div class="mb-4">
        <a href="/admin/quanlydonhang" class="btn btn-primary">Tất cả</a>
        <a href="/admin/quanlydonhang?status=pending" class="btn btn-light shadow-sm">Đang chờ</a>
        <a href="/admin/quanlydonhang?status=completed" class="btn btn-light shadow-sm">Hoàn thành</a>
        <a href="/admin/quanlydonhang?status=cancelled" class="btn btn-light shadow-sm">Hủy</a>
    </div>

    <div class="card shadow border-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                <tr>
                    <th>ID</th>
                    <th>EMAIL / KHÁCH HÀNG</th>
                    <th>TỔNG TIỀN</th>
                    <th>TRẠNG THÁI</th>
                    <th>NGÀY TẠO</th>
                    <th>THAO TÁC</th>
                </tr>
                </thead>
                <tbody>
                {{#each orders}}
                    <tr>
                        <td>#{{sliceId this._id}}</td>
                        <td>
                            <div class="font-weight-bold">{{this.user.email}}</div>
                            <small class="text-muted">{{this.user.name}}</small>
                        </td>
                        <td class="font-weight-bold">{{this.total}}₫</td>
                        <td>
                            {{#if (eq this.status "pending")}}
                                <span class="badge badge-warning text-uppercase">Pending</span>
                            {{/if}}
                            {{#if (eq this.status "completed")}}
                                <span class="badge badge-success text-uppercase">Completed</span>
                            {{/if}}
                            {{#if (eq this.status "cancelled")}}
                                <span class="badge badge-danger text-uppercase">Cancelled</span>
                            {{/if}}
                        </td>
                        <td>{{formatDate this.createdAt}}</td>
                        <td>
                            <div class="d-flex align-items-center">
                                {{#if (eq this.status "pending")}}
                                    <form action="/admin/quanlydonhang/edit/{{this._id}}" method="POST" class="mr-1">
                                        <input type="hidden" name="status" value="completed">
                                        <button class="btn btn-success btn-sm"><i class="fas fa-check"></i></button>
                                    </form>
                                    <form action="/admin/quanlydonhang/edit/{{this._id}}" method="POST" class="mr-1">
                                        <input type="hidden" name="status" value="cancelled">
                                        <button class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>
                                    </form>
                                {{/if}}

                                <a href="/admin/quanlydonhang/edit/{{this._id}}" class="btn btn-info btn-sm mr-1">Chi tiết</a>

                                <form action="/admin/quanlydonhang/delete/{{this._id}}" method="POST" onsubmit="return confirm('Xóa đơn hàng này?')">
                                    <button class="btn btn-outline-danger btn-sm"><i class="fas fa-trash"></i></button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>