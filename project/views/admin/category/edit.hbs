<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <a href="/admin">Dashboard</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/admin/category">Category</a>
    </li>
    <li class="breadcrumb-item active">Sửa</li>
</ol>
<div class=" container-fluid">
    <div class="card-body">
        <div class="col-md-0">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Edit Category</h4>
                </div>

                <div class="card-body border-0">
                    <form action="/admin/category/edit/{{category._id}}?_method=PUT" method="POST">

                        <div class="mb-3">
                            <label class="form-label">Tên Hoa</label>
                            <input name="name" value="{{category.name}}" type="text" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Hình ảnh</label>
                            <input name="image" value="{{category.image}}" type="text" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Giá</label>
                            <input name="price" value="{{category.price}}" type="number" class="form-control">
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Danh mục</label>
                            <select name="category" class="form-control">
                                <option value="bohoa" {{#if (eq category.category "bohoa")}}selected{{/if}}>Bó Hoa</option>
                                <option value="giohoa" {{#if (eq category.category "giohoa")}}selected{{/if}}>Giỏ Hoa</option>
                                <option value="top" {{#if (eq category.category "top")}}selected{{/if}}>Top Bán Chạy</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Mô tả chi tiết</label>
                            <textarea name="description" class="form-control" rows="4">{{category.description}}</textarea>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ý nghĩa hoa</label>
                            <textarea name="meaning" class="form-control" rows="3">{{category.meaning}}</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </form>

                </div>

            </div>

        </div>
    </div>
</div>

</body>
</html>