<div class="container-fluid mt-4">
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">
            <a href="/admin" class="text-decoration-none">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Danh mục hoa</li>
    </ol>

    {{#if success_message}}
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert" id="success-alert">
            <i class="fa-solid fa-circle-check me-2"></i>
            <strong>Thành công!</strong> {{success_message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/if}}

    <div class="card shadow border-0">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold text-primary">DANH SÁCH SẢN PHẨM</h5>
            <a href="/admin/category/create" class="btn btn-primary btn-sm">
                <i class="fa-solid fa-plus me-1"></i> Add A Category
            </a>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                    <tr>
                        <th class="ps-3">STT</th>
                        <th>Tên hoa</th>
                        <th>Hình ảnh</th>
                        <th>Giá</th>
                        <th>Danh mục</th>
                        <th class="text-center">Sửa</th>
                        <th class="text-center">Xóa</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each categories}}
                        <tr>
                            <td class="ps-3">{{inc @index}}</td>

                            <td class="fw-bold">{{this.name}}</td>

                            <td>
                                <div class="p-1 border rounded d-inline-block bg-white shadow-sm">
                                    <img src="/img/{{this.image}}" alt="{{this.name}}"
                                         style="width: 70px; height: 70px; object-fit: cover;" class="rounded">
                                </div>
                            </td>

                            <td class="text-danger fw-bold">
                                {{formatCurrency this.price}} ₫
                            </td>

                            <td>
                                <span class="badge bg-info text-dark px-3 py-2">
                                    {{#if (eq this.category "bohoa")}}Bó Hoa{{/if}}
                                    {{#if (eq this.category "giohoa")}}Giỏ Hoa{{/if}}
                                    {{#if (eq this.category "top")}}Top Bán Chạy{{/if}}
                                </span>
                            </td>

                            <td class="text-center">
                                <a href="/admin/category/edit/{{this._id}}" class="btn btn-sm btn-outline-warning shadow-sm">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>

                            <td class="text-center">
                                {{!-- Logic xác nhận xóa sản phẩm --}}
                                <form action="/admin/category/{{this._id}}?_method=DELETE" method="post"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm [{{this.name}}] này không?')">
                                    <button type="submit" class="btn btn-sm btn-outline-danger shadow-sm">
                                        <i class="fa-solid fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const alert = document.getElementById('success-alert');
        if (alert) {
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            }, 3000);
        }
    });
</script>
