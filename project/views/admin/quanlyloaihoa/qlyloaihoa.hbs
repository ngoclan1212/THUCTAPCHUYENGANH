<a href="/admin/quanlyloaihoa/create" class="btn btn-primary mb-3">
    Thêm loại hoa
</a>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>Tên loại hoa</th>
        <th>Mô tả</th>
        <th>Ngày tạo</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>

    <tbody>
    {{#each categories}}
        <tr>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>{{createdAt}}</td>
            <td>
                <a href="/admin/quanlyloaihoa/edit/{{_id}}">
                    <i class="fa-solid fa-pen-to-square text-warning"></i>
                </a>
            </td>
            <td>
                <form action="/admin/quanlyloaihoa/{{_id}}?_method=DELETE" method="POST">
                    <button type="submit" class="border-0 bg-transparent">
                        <i class="fa-solid fa-trash-alt text-danger"></i>
                    </button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
