<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item">
        <a href="/admin">Dashboard</a>
    </li>
</ol>

<table class="table table-bordered table-hover text-center">
    <thead class="table-dark">
    <tr>
        <th>STT</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Password</th>
        <th>Trạng Thái</th>
        <th>Sửa</th>
        <th>Xóa</th>
    </tr>
    </thead>

    <tbody class="table-group-divider">
    {{#each users}}
        <tr>
            <td>{{@index}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.password}}</td>
            <td>
                {{#if this.isActive}}
                    <span class="badge bg-success">Hoạt động</span>
                {{else}}
                    <span class="badge bg-danger">Bị khóa</span>
                {{/if}}
            </td>

            <td>
                <a href="/admin/user/edit/{{this._id}}" class="btn btn-warning btn-sm">
                    Sửa
                </a>
            </td>

            <td>
                <form action="/admin/user/delete/{{this._id}}" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Bạn có chắc muốn xóa user này?')">
                        Xóa
                    </button>
                </form>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>
