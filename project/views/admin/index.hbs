<div class="container-fluid">
    <!-- Breadcrumbs -->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Flower Shop</li>
    </ol>

    <!-- Icon Cards -->
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-leaf"></i>
                    </div>
                    <div class="mr-5">12 New Flower Arrivals!</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">View Flowers</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-success o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-shopping-cart"></i>
                    </div>
                    <div class="mr-5">34 New Orders!</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">View Orders</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-users"></i>
                    </div>
                    <div class="mr-5">18 New Customers!</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">View Customers</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-danger o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fa fa-fw fa-star"></i>
                    </div>
                    <div class="mr-5">Top Seller: Roses!</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">View Stats</span>
                    <span class="float-right">
                        <i class="fa fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>

    <!-- Flower Sales Chart -->
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-area-chart"></i> Monthly Flower Sales</div>
        <div class="card-body">
            <canvas id="flowerSalesChart" width="100%" height="30"></canvas>
        </div>
        <div class="card-footer small text-muted">Updated today</div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Recent Orders Table -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-table"></i> Recent Orders</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="ordersTable" width="100%" cellspacing="0">
                            <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Flower</th>
                                <th>Quantity</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td>#1001</td>
                                <td>Lan Pham</td>
                                <td>Red Roses</td>
                                <td>12</td>
                                <td>2025-11-16</td>
                                <td>Delivered</td>
                            </tr>
                            <tr>
                                <td>#1002</td>
                                <td>John Doe</td>
                                <td>Tulips</td>
                                <td>6</td>
                                <td>2025-11-15</td>
                                <td>Pending</td>
                            </tr>
                            <tr>
                                <td>#1003</td>
                                <td>Mary Jane</td>
                                <td>Orchids</td>
                                <td>3</td>
                                <td>2025-11-14</td>
                                <td>Shipped</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer small text-muted">Updated today</div>
            </div>

            <!-- Flower News Feed -->

        </div>

        <div class="col-lg-4">
            <!-- Top Flowers Pie Chart -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-pie-chart"></i> Top Selling Flowers</div>
                <div class="card-body">
                    <canvas id="topFlowersChart" width="100%" height="100"></canvas>
                </div>
                <div class="card-footer small text-muted">Updated today</div>
            </div>

            <!-- Notifications / Alerts -->
            <div class="card mb-3">
                <div class="card-header">
                    <i class="fa fa-bell-o"></i> Alerts</div>
                <div class="list-group list-group-flush small">
                    <a class="list-group-item list-group-item-action" href="#">
                        <div class="media">
                            <img class="d-flex mr-3 rounded-circle" src="" alt="">
                            <div class="media-body">
                                <strong>System</strong> Low stock on Red Roses.
                                <div class="text-muted smaller">Today at 9:00 AM</div>
                            </div>
                        </div>
                    </a>
                    <a class="list-group-item list-group-item-action" href="#">
                        <div class="media">
                            <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/45x45" alt="">
                            <div class="media-body">
                                <strong>System</strong> 5 orders pending shipment.
                                <div class="text-muted smaller">Today at 10:30 AM</div>
                            </div>
                        </div>
                    </a>
                </div>
                <div class="card-footer small text-muted">Updated today</div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
